<div class="card">
  <div class="card-header">
      <h2>{{ article.title }}</h2>
  </div>
  <div class="card-body">
      <p>{{ article.text }}</p>
  </div>
  <div class="card-footer">
      <p>{{ article.getReadingTimeInMinutes() }} min read</p>
      <a href="{{ path('article_show', {'id': article.id}) }}">Read more</a>
  </div>
</div>
